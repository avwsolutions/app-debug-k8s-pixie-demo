import pxtrace
import px

# Adapted from https://github.com/iovisor/bpftrace/blob/master/tools/syncsnoop.bt

program = """
tracepoint:syscalls:sys_enter_sync,
tracepoint:syscalls:sys_enter_syncfs,
tracepoint:syscalls:sys_enter_fsync,
tracepoint:syscalls:sys_enter_fdatasync,
tracepoint:syscalls:sys_enter_sync_file_range*,
tracepoint:syscalls:sys_enter_msync
{
	printf(\"_pid:%-6d _comm:%-16s _probe:%s\", pid, comm, probe);
}
"""
def sync_snoop_func():
    table_name = 'sync_snoop_table'
    pxtrace.UpsertTracepoint('sync_snoop_tracer',
                             table_name,
                             program,
                             pxtrace.kprobe(),
                             "10m")
    df = px.DataFrame(table=table_name)
    
    return df