import pxtrace
import px

# Adapted from https://github.com/iovisor/bpftrace/blob/master/tools/biosnoop.bt

program = """
kprobe:blk_account_io_start
{
	@start[arg0] = nsecs;
	@iopid[arg0] = pid;
	@iocomm[arg0] = comm;
	@disk[arg0] = ((struct request *)arg0)->rq_disk->disk_name;
}

kprobe:blk_account_io_done
/@start[arg0] != 0 && @iopid[arg0] != 0 && @iocomm[arg0] != ""/

{
	$now = nsecs;
    printf(\"time_:%llu _disk:%s _conn:%s _pid:%d \", $now, @disk[arg0], @iocomm[arg0], @iopid[arg0]);
	

	delete(@start[arg0]);
	delete(@iopid[arg0]);
	delete(@iocomm[arg0]);
	delete(@disk[arg0]);
}

END
{
	clear(@start);
	clear(@iopid);
	clear(@iocomm);
	clear(@disk);
}
"""
def bio_snoop_func():
    table_name = 'bio_snoop_table'
    pxtrace.UpsertTracepoint('bio_snoop_tracer',
                             table_name,
                             program,
                             pxtrace.kprobe(),
                             "10m")
    df = px.DataFrame(table=table_name)

    return df